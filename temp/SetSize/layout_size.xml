<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="16dp"
        android:background="@color/bg_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp" >

        <TextView
            style="@style/TextViewSubhead"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/activity_recharge_confirm_0" />

        <TextView
            android:id="@+id/tv_money"
            style="@style/TextViewSubhead"
            android:text="ï¿¥500"
            android:textColor="@color/txt_red" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_divider" />

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginBottom="1px"
        android:background="@color/background" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_divider" />

    <com.imohoo.BusinessCMT.view.myview.MyListView
        android:id="@+id/lv_recharge_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:cacheColorHint="@color/transparent"
        android:divider="@color/bg_divider"
        android:dividerHeight="1px"
        android:listSelector="@color/transparent" >
    </com.imohoo.BusinessCMT.view.myview.MyListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_divider" />

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginBottom="1px"
        android:background="@color/background" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_divider" />

    <LinearLayout
        android:id="@+id/ll_confirm_infos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp" >

        <TextView
            style="@style/TextViewSubhead"
            android:layout_marginBottom="16dp"
            android:text="@string/activity_recharge_confirm_1" />

        <TextView
            android:id="@+id/tv_confirm_good_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_recharge_confirm_2"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_confirm_good_description"
            style="@style/TextViewBody"
            android:textColor="@color/txt_light_gray" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bg_divider" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="36dp"
        android:background="@drawable/btn_recharge"
        android:text="@string/activity_recharge_confirm_3"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_phone"
        style="@style/TextViewBody"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="4dp"
        android:text="400-966-0968"
        android:textColor="@color/title_blue" />

    <TextView
        style="@style/TextViewBody"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="@string/activity_recharge_confirm_4"
        android:textColor="@color/txt_light_gray" />

</LinearLayout>
